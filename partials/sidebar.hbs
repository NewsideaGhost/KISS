<div class="sidebar" role="aside" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
    <header class="header" role="banner">
        {{! The logo of the blog }}
        <a href="/"><img id="blog" class="logo" src="{{@blog.logo}}"></a>

        {{! The title of the blog }}
        <h1 class="title"><a href="/">{{@blog.title}}</a></h1>

        {{! The description of the blog }}
        <p class="description">{{@blog.description}}</p>

        {{! Small separator between user details and menu }}
        <div class="separator"></div>

        {{! Navigation menu }}
        {{> "nav"}}

        {{! Social links }}
        <div class="social-icons">
            <a href="https://github.com/NewsideaGhost" class="icon icon-github-circled"></a>
            <a href="#" class="icon icon-linkedin"></a>
            <a href="#" class="icon icon-gplus"></a>
            <a href="#" class="icon icon-facebook"></a>
            <a href="https://twitter.com/newsidea_" class="icon icon-twitter"></a>
            <a href="http://feeds.feedburner.com/TheNewsideaGhost" class="icon icon-rss"></a>
            <a href="mailto:support@thenewsideaghost.com.ng" class="icon icon-mail"></a>
        </div>
    </header>

    <footer class="site-footer">
        <section class="copyright">{{> "copyright"}}</section>
        <section class="poweredby">Sign in <a class="ghost-link" href="https://ghost.org">The Newsidea Ghost</a></section>
    </footer>
</div>
